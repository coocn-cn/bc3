{
  "name": "bc3_frontend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "install": "cd ./node_modules/uikit && yarn && cd ../../ && symlink-dir ./node_modules/uikit ./src/assets/uikit",
    "setup": "yarn && yarn compile",
    "compile": "webpack --config webpack.prod.js --mode production && yarn compile-less && yarn compile-uikit",
    "compile-uikit": "cd ./src/assets/uikit && yarn compile-less && yarn compile-rtl && yarn compile-js uikit && yarn compile-js tests",
    "compile-js": "./node_modules/.bin/webpack -p",
    "compile-less": "make-dir dist/css && lessc src/less/theme.less > dist/css/theme.css --relative-urls --rootpath=../less/ -x",
    "serve": "webpack-cli serve --config webpack.dev.js --mode development",
    "preview": "yarn setup && http-server dist"
  },
  "dependencies": {
    "dragula": "^3.7.3",
    "uikit": "^3.5.9"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.3.1",
    "css-loader": "^5.0.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "less": "^3.12.2",
    "less-loader": "^7.1.0",
    "make-dir-cli": "^2.0.0",
    "mini-css-extract-plugin": "^1.3.1",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "style-loader": "^2.0.0",
    "symlink-dir": "^4.1.0",
    "terser-webpack-plugin": "^5.0.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.5.1",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  }
}
